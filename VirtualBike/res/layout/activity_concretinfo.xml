<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/textViewborrowinfolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="可借：" />

       

        <ImageView
            android:id="@+id/imageViewborrowinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
             />

        <TextView
            android:id="@+id/textViewreturninfolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可还：" 
            android:layout_weight="0"/>
		 <ImageView
            android:id="@+id/imageViewreturninfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
             />
       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

           <TextView
            android:id="@+id/textViewaddresslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点地址：" 
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/textviewaddressinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="0"/>

    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"    
        android:gravity="center"   
        android:orientation="horizontal" >
	 	<com.baidu.mapapi.map.MapView
		        android:id="@+id/bmapView"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_alignParentTop="true"
		        android:clickable="true" />
	 	</LinearLayout>
	 	
</LinearLayout>
