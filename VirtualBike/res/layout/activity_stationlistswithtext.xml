<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/textViewborrowinfo2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="可借：" />

        <TextView
            android:id="@+id/textviewborrowinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/textViewreturninfo2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可还：" 
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/textviewreturninfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

          <TextView
            android:id="@+id/textViewaddress2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点地址：" 
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/textviewaddress2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"    
        android:gravity="center"   
        android:orientation="horizontal" >
	 	<com.baidu.mapapi.map.MapView
		        android:id="@+id/bmapView"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_alignParentTop="true"
		        android:clickable="true" />
	 	</LinearLayout>
</LinearLayout>
